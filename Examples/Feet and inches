
#include <stdio.h>
struct feets
{
    int feet;
    int inches;
};
void sum(struct feets d1,struct feets d2);
int main()
{
    struct feets d1,d2;
    printf("enter feets of d1:");
    scanf("%d",&d1.feet);
    printf("enter inches of d1: ");
    scanf("%d",&d1.inches);
    printf("enter feets of d2:");
    scanf("%d",&d2.feet);
    printf("enter inches of d2: ");
    scanf("%d",&d2.inches);
    sum(d1,d2);
}
void sum(struct feets d1,struct feets d2)
{
    struct feets d3;
    int tempf,temp,i;
    tempf=d1.feet+d2.feet;
    temp=d1.inches+d2.inches;
    d3.feet=tempf;
    d3.inches=temp;
    for(i=1;d3.inches>11;i++)
    {
        d3.inches=d3.inches-12;
        d3.feet=d3.feet+1;
    }
    printf("sum feet is %d\n",d3.feet);
    printf("sum inches is %d\n",d3.inches);
}
